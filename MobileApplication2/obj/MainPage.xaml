<Page
    x:Class="MobileApplication2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MobileApplication2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" FontFamily="Arial Black" FontWeight="Bold">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Design element of the page which includes a Logo, Colour, Font Styles and Buttons. -->
        <StackPanel Margin="0,0,0,-630" Grid.RowSpan="2">
            <Grid Background="#808080" Height="638">
                <Image x:ConnectionId='1' Name="logo" Source="http://restaurantsnearbymenow.com/wp-content/uploads/2016/10/food-41702_1280.png" HorizontalAlignment="Left" Height="106" Margin="58,43,0,0" VerticalAlignment="Top" Width="92" RenderTransformOrigin="0.944,1.035"/>
                <TextBlock HorizontalAlignment="Left" Margin="155,48,0,0" Text="FOOD NEAR ME" TextWrapping="Wrap" VerticalAlignment="Top" Height="80" Width="168" FontSize="36" FontFamily="Arial" FontWeight="Bold" Foreground="#00cc00"/>
                <Border BorderBrush="Lime" HorizontalAlignment="Left" Height="120" Margin="44,30,0,0" VerticalAlignment="Top" Width="280" BorderThickness="4,4,4,4" CornerRadius="8,8,8,8" />

                <!-- This is the add restaurant button which will also bring you to the destinated page -->
                <Button x:ConnectionId='2'                Content="Camera" HorizontalAlignment="Left" Margin="75,190,0,0" VerticalAlignment="Top" Height="90" Width="210" Background="#333333" FontFamily="Arial" Foreground="White"/>

                <!-- This is the Coordinates button which will also bring you to the destinated page -->
                <Button x:ConnectionId='3'                     Content="Your Location" HorizontalAlignment="Left" Margin="75,336,0,0" VerticalAlignment="Top" Height="90" Width="210" Background="#333333" FontFamily="Arial" Foreground="White"/>


                <!-- This is the Restaurants button which will also bring you to the destinated page -->
                <Button x:ConnectionId='4'                         Content="View Restaurants Near By" HorizontalAlignment="Left" Margin="75,478,0,0" VerticalAlignment="Top" Height="90" Width="210" Background="#333333" FontFamily="Arial" Foreground="White"/>



                <TextBlock HorizontalAlignment="Left" Margin="71,612,0,0" Text="Food Near Me by Christian Olim" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="LightGray" FontStyle="Italic"/>
            </Grid>
        </StackPanel>
    </Grid>

</Page>

